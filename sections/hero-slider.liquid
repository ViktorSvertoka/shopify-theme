{{ 'hero-slider.css' | asset_url | stylesheet_tag }}
{{ 'hero-slider.js' | asset_url | script_tag }}

<section class="hero">
  <div class="hero__slider swiper-container">
    <div class="hero__wrapper swiper-wrapper">
      {%- for block in section.blocks -%}
        <div 
          class="hero__slide swiper-slide" 
          style="background-image: url('{{ block.settings.slide_image | image_url: width: 1920 }}');"
        ></div>
      {%- endfor -%}
    </div>
    <div class="hero__pagination swiper-pagination"></div>
  </div>

  <div class="hero__content container">
    <div class="hero__inner">
      <h1 class="hero__title">{{ section.settings.title }}</h1>
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.button_link }}" class="hero__button button button--light">
        {{ section.settings.button_label }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "More than just shoes â€” it's a part of your story.",
      "label": "Hero Title"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "default": "Original sneakers from Nike and other top brands that make every step feel special.",
      "label": "Hero Subtitle"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop the Collection",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
