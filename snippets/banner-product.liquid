{{ 'banner-product.css' | asset_url | stylesheet_tag }}
<script src="{{ 'banner-product.js' | asset_url }}" defer></script>

{%- liquid
  assign banner_product = nil
  
  if product
    assign banner_product = product
  elsif handle
    assign banner_product = all_products[handle]
  endif
-%}

{%- if banner_product == nil or banner_product == blank -%}
  <div class="banner-product__error" role="alert">
    {{ 'products.product.banner.not_found' | t }}
  </div>
{%- else -%}
  <div class="banner-product container">
    <div class="banner-product__gallery"
         data-all-images='[
           {%- if banner_product.images != blank -%}
             {%- for image in banner_product.images -%}
               "{{ image | image_url: width: 800 }}"{% unless forloop.last %},{% endunless %}
             {%- endfor -%}
           {%- else -%}
             "{{ 'product-placeholder.jpg' | asset_url }}" alt="Placeholder image"
           {%- endif -%}
         ]'>
      <div class="banner-product__thumbs"></div>
      <div class="banner-product__main"></div>
    </div>

    <div class="banner-product__content">
      <h2 class="banner-product__title">{{ banner_product.title | escape }}</h2>

      {%- render 'banner-product-badge', product: banner_product -%}
      {%- render 'banner-product-price', product: banner_product -%}
      {%- render 'banner-product-colors', product: banner_product -%}
      {%- render 'banner-product-sizes', product: banner_product -%}
      {%- render 'banner-product-add-to-cart', product: banner_product -%}
      {%- render 'banner-product-description', product: banner_product -%}
    </div>
  </div>
{%- endif -%}
